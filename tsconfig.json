{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",

    "allowJs": true,
    "checkJs": false,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },

  "include": [
    "tests/**/*",
    "**/*.ts",
    "**/*.js"
  ],

  "exclude": [
    "node_modules",
    "test-results",
    "playwright-report",
    "coverage",
    "dist"
  ]
}
